<?xml version="1.0"?>
<extension key="de.systopia.mailattachment" type="module">
  <file>mailattachment</file>
  <name>Mail Attachments</name>
  <description>Provides a Framework for attaching files to e-mail sent from CiviCRM.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>SYSTOPIA</author>
    <email>info@systopia.de</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://github.com/systopia/de.systopia.mailattachment</url>
    <url desc="Documentation">https://docs.civicrm.org/mailattachment/en/latest</url>
    <url desc="Support">https://github.com/systopia/de.systopia.mailattachment/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-06-16</releaseDate>
  <version>1.0.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>5.81</ver>
  </compatibility>
  <comments/>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <civix>
    <namespace>CRM/Mailattachment</namespace>
    <angularModule>crmMailattachment</angularModule>
    <format>25.01.1</format>
  </civix>
  <mixins>
    <mixin>smarty@1.0.3</mixin>
  </mixins>
</extension>
